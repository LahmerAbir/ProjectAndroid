<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Call">



android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="750dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image4"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="كلمنا توا!"
                android:textAlignment="center"
                android:textColor="#DC8585"
                android:textSize="30sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:orientation="vertical">


                <Button
                    android:id="@+id/call1"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:gravity="right"
                    android:padding="20dp"
                    android:text="الجمعية التونسية للتصرف و التوازن الإجتماعي"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/call2"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="20dp"
                    android:gravity="right"

                    android:text="جمعية النساء التونسيات للبحث حول التنمية "
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/call3"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="20dp"
                    android:gravity="right"

                    android:text="جمعية أصوات النساء"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/call4"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="20dp"
                    android:gravity="right"

                    android:text=" التبليغ عن حلات العنف   "
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/call5"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="20dp"
                    android:text=" الإنصات و الإحاطة النفسية  "
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="right"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/call6"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="20dp"
                    android:gravity="right"

                    android:text=" إسعاف "
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/call7"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bgbtn"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:padding="20dp"
                    android:text=" شرطة النجدة "
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>