<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Demande">


    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="133dp"
                android:layout_height="88dp"
                android:layout_marginStart="117dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="116dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/professions" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="شنوا نوع العنف اللي صار عليك ؟؟"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/viol1"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/black"
                        android:text="عنف جسدي"
                        android:layout_marginStart="50dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"

                        />


                    <CheckBox
                        android:id="@+id/viol2"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:buttonTint="@android:color/black"
                        android:shadowColor="@android:color/black"
                        android:text="عنف لفضي"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/viol4"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/black"
                        android:text="سرقة"
                        android:layout_marginStart="50dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/viol3"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:buttonTint="@android:color/black"
                        android:text="عنف جنسي"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />


                </LinearLayout>


                <EditText
                    android:id="@+id/viol5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border"
                    android:drawablePadding="10dp"
                    android:hint="عنف أخر"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#606060"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="20dp"
                    android:text=" شكون إعتدى عليك؟؟"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/PersoGp1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/persone1"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:buttonTint="@android:color/black"
                                android:text="راجلي"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/persone2"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:buttonTint="@android:color/black"
                                android:text="طليقي"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />
                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/PersoGp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/persone3"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:buttonTint="@android:color/black"
                                android:text="غريب"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/persone5"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:buttonTint="@android:color/black"
                                android:text=" من العايلة "
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/perso6"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border"
                    android:drawablePadding="10dp"
                    android:hint="شخص أخر"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#606060"
                    android:textSize="12sp" />


                <ImageButton
                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="40dp"
                    android:background="#DC8585"
                    android:gravity="left|bottom"
                    android:src="@drawable/ic_arrow_forward_black_24dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>