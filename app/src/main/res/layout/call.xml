<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    tools:context=".Call">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="374dp"
        android:layout_height="726dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        y

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="362dp"
            android:layout_height="577dp"
            android:background="#FFFDFD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <Button
                    android:id="@+id/call1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#03A9F4"
                    android:drawableStart="@android:drawable/stat_sys_phone_call"
                    android:text="الجمعية التونسية للتصرف و التوازن الإجتماعي"
                    android:textColor="#FC000000" />

                <Button
                    android:id="@+id/call2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#0591D1"
                    android:drawableStart="@android:drawable/stat_sys_phone_call"
                    android:shadowColor="#1DC6DC"
                    android:text="جمعية النساء التونسيات للبحث حول التنمية"
                    android:textColor="@color/design_default_color_on_secondary" />

                <Button
                    android:id="@+id/call3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#0871A1"
                    android:drawableStart="@android:drawable/stat_sys_phone_call"
                    android:text="جمعية أصوات النساء"
                    android:textColor="@color/design_default_color_on_secondary" />

                <Button
                    android:id="@+id/call4"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#088AF1"
                    android:drawableStart="@android:drawable/stat_sys_phone_call"
                    android:text="التبليغ عن حلات العنف"
                    android:textColor="@color/design_default_color_on_secondary" />

                <Button
                    android:id="@+id/call5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#46B5D1"
                    android:drawableStart="@android:drawable/stat_sys_phone_call"
                    android:text="الإنصات و الإحاطة النفسية"
                    android:textColor="@color/design_default_color_on_secondary" />

                <Button
                    android:id="@+id/call6"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#55F6F4"
                    android:drawableStart="@android:drawable/stat_sys_phone_call"
                    android:text="إسعاف"
                    android:textColor="@color/design_default_color_on_secondary" />

                <Button
                    android:id="@+id/call7"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#7ADAD9"
                    android:drawableStart="@android:drawable/stat_sys_speakerphone"
                    android:text="شرطة النجدة "
                    android:textColor="@color/design_default_color_on_secondary" />
            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="143dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="41dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/vintage"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="94dp"
                android:layout_marginBottom="30dp"
                android:text="شكون يعاونك"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/tt"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="56dp"
                android:text="تنجم تكلم"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>