<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/myhoooooo"
    tools:context=".English.HomeActivity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/logout"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/cambay"
            android:gravity="center"
            android:text="LogOut"
            android:textColor="#FF2073BC"
            android:textSize="18dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rights"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/safety" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/cambay"
            android:gravity="center"
            android:text="Rights"
            android:textColor="#529FCA"
            android:textSize="18dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/violence"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/search" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Violence"
            android:textColor="#529FCA"
            android:textSize="18dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/stat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/barchart" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/cambay"
            android:gravity="center"
            android:text="Inforamtion"
            android:textColor="#529FCA"
            android:textSize="17dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/map"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circlebtn"
            android:src="@drawable/dig" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/cambay"
            android:gravity="center"
            android:text="Statistics"
            android:textColor="#529FCA"
            android:textSize="18dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:gravity="bottom"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/call"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circlebtn"
                    android:src="@drawable/phone"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/cambay"
                    android:gravity="center"
                    android:text="Call us"
                    android:textColor="#529FCA"
                    android:textSize="25dp"
                    android:textStyle="bold" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginStart="45dp"
                android:layout_marginTop="50dp"
                android:gravity="bottom"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/demande"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circlebtn"
                    android:src="@drawable/professions"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/cambay"
                    android:gravity="center"
                    android:text="Report"
                    android:textStyle="bold"
                    android:textColor="#529FCA"
                    android:textSize="25dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginStart="45dp"
                android:layout_marginTop="50dp"
                android:gravity="bottom"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/forum"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circlebtn"
                    android:src="@drawable/businessmen"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/cambay"
                    android:gravity="center"
                    android:text="Forum"
                    android:textStyle="bold"
                    android:textColor="#529FCA"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
