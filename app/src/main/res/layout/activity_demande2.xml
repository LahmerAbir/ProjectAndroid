<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Demande">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:text="Report him!!"
                android:textAllCaps="true"
                android:textColor="#DC8585"
                android:textSize="45sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Types of violence"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="359dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/viol1"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/black"
                        android:text="physical violence"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"

                        />


                    <CheckBox
                        android:id="@+id/viol2"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:buttonTint="@android:color/black"
                        android:shadowColor="@android:color/black"
                        android:text="Verbal violence"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="359dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/viol4"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/black"
                        android:text="Steal"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/viol3"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:buttonTint="@android:color/black"
                        android:text="Sexual violence"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />


                </LinearLayout>


                <EditText
                    android:id="@+id/viol5"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border"
                    android:drawablePadding="10dp"
                    android:hint="Another...."
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#606060"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="20dp"
                    android:text="Who...?"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/PersoGp1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/persone1"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:buttonTint="@android:color/black"
                                android:text="Husband"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/persone2"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:buttonTint="@android:color/black"
                                android:text="Ex husband"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />
                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/PersoGp"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/persone3"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:buttonTint="@android:color/black"

                                android:text="A stranger"
                                android:textColor="@android:color/black"

                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/persone5"
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:buttonTint="@android:color/black"
                                android:text=" من العايلة "
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/perso6"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border"
                    android:drawablePadding="10dp"
                    android:hint="Another person..."
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#606060"
                    android:textSize="18sp" />
                <ImageButton

                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="40dp"
                    android:background="#DC8585"
                    android:gravity="left"
                    android:src="@drawable/ic_arrow_forward_black_24dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>